<p id="notice"><%= notice %></p>

<div>
  <strong>Name:</strong>
  <%= @shop.name %>
  <br>
  <h2>Order details</h2>
  <table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Product</th>
      <th>Payment mode</th>
      <th>Dop</th>
    </tr>
  </thead>

  <tbody>
    <tr>
   <% @shop.orders.each_with_index do |ord| %>
   <td><%= link_to ord.customer.name, ord %></td>
   <td><%= link_to ord.product.name, ord %></td>
   <td><%= ord.payment_mode%></td>
   <td><%= ord.DOP %></td>
   <% end %>
   </tbody>
</table>
</div>

<%= link_to 'Edit', edit_shop_path(@shop) %> |
<%= link_to 'Back', shops_path %>
