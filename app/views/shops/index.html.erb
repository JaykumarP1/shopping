<p id="notice"><%= notice %></p>
<div class="container">
  <div class = "main">
    <h1>Shops</h1>
    <div class = "dis">
      <table>
          <% @shops.each do |shop| %>
            <tr>
              <td><%= link_to shop.name, shop %></td>
              <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
              <td><%= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
      </table>
    </div>

      <br>

      <%= link_to 'New Shop', new_shop_path,class: 'btn btn-cyan' %>
      </div>
</div>
